<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Administracao.Venda.VendaConsulta"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dashboard_header_info">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/logo_menu"

            android:layout_marginEnd="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/textNomeDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Nome!"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/notosans_regular_black"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/textCargoDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Cargo"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/white"
            android:textSize="14dp"

            android:layout_below="@+id/textNomeDash"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venda"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/noto_sans"
            />

        <EditText
            android:id="@+id/editTextBusca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:inputType="text"
            android:drawableEnd="@drawable/barra_pesquisa_icon"
            android:hint="Digite o nome do cliente"
            android:textColorHint="#8C8C8C"
            android:textColor="@color/black"
            />

        <ListView
            android:id="@+id/listaVenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="20dp"
            android:divider="@color/white"
            android:dividerHeight="0.2dp"

            />

    </LinearLayout>

</RelativeLayout>