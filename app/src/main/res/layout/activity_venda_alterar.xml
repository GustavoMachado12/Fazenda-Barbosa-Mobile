<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Administracao.Venda.VendaAltera">

    <RelativeLayout
        android:id="@+id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dashboard_header_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/logo_menu"

            android:layout_marginEnd="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/textNomeDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Nome!"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/notosans_regular_black"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/textCargoDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Cargo"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/white"
            android:textSize="14dp"

            android:layout_below="@+id/textNomeDash"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-15dp"
        app:layout_constraintTop_toBottomOf="@id/dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venda/Alterar"

            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/noto_sans"
            />


        <!-- CLIENTE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Cliente"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/produto_alterar_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-7sp"

            android:hint="R. S. Thompson"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/noto_sans"
            android:inputType="text"
            />

        <!-- DATA VENDA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Data da Venda"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/produto_alterar_data_venda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-7sp"

            android:hint="21/12/2022"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/noto_sans"
            />

        <!-- PRODUTO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Produto"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/produto_alterar_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-7sp"

            android:hint="PimentÃ£o-Vermelho"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/noto_sans"
            />

        <!-- PRODUTO QUANTIDADE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Quantidade"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/produto_alterar_quantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-7sp"

            android:hint="19"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/noto_sans"
            android:inputType="number" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400sp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_produto_alterar"
                android:layout_width="300dp"
                android:layout_height="55dp"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:text="Alterar"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"

                app:cornerRadius="32dp"
                android:backgroundTint="@color/bgLoginButton" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>